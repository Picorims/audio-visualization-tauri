{
  "build": {
    "beforeDevCommand": "npm run dev",
    "beforeBuildCommand": "npm run build",
    "devPath": "http://localhost:1420",
    "distDir": "../dist",
    "withGlobalTauri": false
  },
  "package": {
    "productName": "audio-visualization-tauri",
    "version": "1.0.0-indev"
  },
  "tauri": {
    "allowlist": {
      "all": false,
      "shell": {
        "all": false,
        "open": true,
        "sidecar": true,
        "scope": [
          {
            "name": "ffmpeg",
            "sidecar": true,
            "args": ["-i", {"validator": "\\S+"}, "-ar", "44100", "-ac", "1", "-f", "s16le", "-acodec", "pcm_s16le", {"validator": "\\S+"}]
          }
        ]
      },
      "dialog": {
        "all": false,
        "ask": false,
        "confirm": false,
        "message": true,
        "open": true,
        "save": false
      },
      "fs": {
        "all": false,
        "readFile": true,
        "removeFile": true,
        "renameFile": true,
        "copyFile": true,
        "scope": ["$APPCACHE/*"]
      },
      "protocol": {
        "all": false,
        "asset": true,
        "assetScope": ["$APPCACHE/**"]
      },
      "path": {
        "all": true
      }
    },
    "bundle": {
      "active": true,
      "targets": "all",
      "identifier": "com.picorims.audio-visualization-tauri",
      "icon": [
        "icons/32x32.png",
        "icons/128x128.png",
        "icons/128x128@2x.png",
        "icons/icon.icns",
        "icons/icon.ico"
      ],
      "externalBin": [
        "binaries/ffmpeg"
      ]
    },
    "security": {
      "csp": null
    },
    "windows": [
      {
        "fullscreen": false,
        "resizable": true,
        "title": "audio-visualization-tauri",
        "width": 800,
        "height": 600
      }
    ]
  }
}
